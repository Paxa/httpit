!!! 5
%html(lang="en")
  %head
    <style type="text/css">
    :sass
      #wrap
        :width 800px
        :margin 30 auto 50px

      a
        :color #1777E0
        &:hover
          :color #006db2

      span
        :color #777

      ul, li
        :list-style-type none

      ul > header
        :font-style italic
        :margin-bottom 11px

      .preview_link
        :color #55a075
        :margin-left 20px

      input[type=search]
        :width 300px
      input[type=submit]
        :display none
    </style>
    
  %body
    #wrap
      %h1
        %span Folder: 
        = @path == '' ? '/' : @path
        - if @path != ''
          %a{:href => @path.gsub(%r{/[^/]+/?$}, '') + '/'} &larr;
  

      %ul
        %header
          Sort
          %select.sorting
            - for key in %w{name size ctime mtime}
              %option{params[:sort] == key ? {:selected => "selected"} : {}}= key
      
        - for file in @files
          %li
            - if file[1] == :file
              %span= "&ndash;"
            - elsif file[1] == :dir
              %span= "+"
            - elsif file[1] == :link
              %span= "&rarr;"
          
            %a{:href => file_url(@path, file[0], file[1])}= file[0]
        
            - if %w{.jpg .jpeg .png .gif}.include?(File.extname(file[0]).downcase)
              %a{:href => "/__img_preview?file=#{file_url(@path, file[0])}", :class => "preview_link"} #1024
            - if file[2]
              %a{:href => "/__view?file=.#{file_url(@path, file[0])}", :class => "preview_link"} view

    %script{:type => "text/javascript"}= GEM_ROOT.join('views/utils.js').read